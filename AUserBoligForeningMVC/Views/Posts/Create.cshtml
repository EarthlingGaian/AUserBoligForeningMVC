@model AUserBoligForeningMVC.Models.Post

@{
    ViewData["Title"] = "Create";
}


<br />
<br />


<h4 style="text-align:center">Tilføj et post til chatten</h4>
<h6 style="text-align:center">Det kunne være en vasling om fest eller hundepasning</h6>
<br />
<div class="card">
    <div class="card-body">
        
            
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        
                        @Html.TextAreaFor(model => model.PostContent,
                            new { @cols = "100", @rows = "8", @style = "width:100%;" })
                        <span asp-validation-for="PostContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-md" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Tilbage til chat</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
